        <meta property="og:type" content="website">
    
        <!-- Hojas de estilo -->
        <link rel="stylesheet" href="/css/bootstrap.min.css">
        <link rel="stylesheet" href="/css/custom.css">
        <link rel="stylesheet" href="/css/footer.css">

        <link rel="icon" type="image/png" href="/images/logo DCL+ Negro.png">
    
        <!-- Google Fonts / Iconos -->
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0&icon_names=handshake" />
    </head>
    
<body>
    
    <%- include('partials/header') %> <!-- No es necesario pasar 'title' explícitamente aquí -->
    <div class="alerta" id="alerta">
      ⚠️ <b>Aviso:</b> Este sitio está en desarrollo. Los textos e imágenes son solo ejemplos ilustrativos. ⚠️
      <button id="cerrarAlerta">✖</button>
    </div>
    <!-- Video como banner -->
<video autoplay loop muted playsinline class="banner-video contenido">
    <source src="/images/video-baner-dcl.mp4" type="video/mp4">
    Error, tu navegador no soporta videos.
</video>
      
  <!-- Propuesta de valor -->
<section class="propuesta-de-valor_contenedor animated contenido">
    <div class="contenedor-titulo-propuesta">
      <h2>Propuesta de valor</h2>
    </div>
  
    <div class="grid-propuestaIcons animated">
      <div class="propuesta-item">
        <img class="img-propuesta" src="/images/logo-medalla.svg" alt="">
        <p>Experiencia con <br> grandes marcas</p>
      </div>
      <div class="propuesta-item">
        <img class="img-propuesta" src="/images/logo-escudo.svg" alt="">
        <p>Calidad <br> garantizada</p>
      </div>
      <div class="propuesta-item">
        <img class="img-propuesta" src="/images/logo-mecanica.svg" alt="">
        <p>Producción <br> personalizada</p>
      </div>
      <div class="propuesta-item">
        <img class="img-propuesta" src="/images/logo-hand.svg" alt="">
        <p>Cumplimiento y <br> confianza</p>
      </div>
    </div>
  </section>


  
<!-- HTML: Sección de Marcas con efecto Flip (clases personalizadas) -->
<section class="seccion-marcas animated">
  <div class="seccion-marcas__titulo">
    <h2>Marcas que confían <br> en nosotros</h2>
    <p>Ellos creen en nuestra calidad</p>
  </div>

  <div class="seccion-marcas__navegacion">
    <button id="flecha-izquierda" class="navegacion__flecha">&#8592;</button>

    <div class="seccion-marcas__contenedor" id="marcas-contenedor">
      <!-- Marcas insertadas por JS -->
    </div>

    <button id="flecha-derecha" class="navegacion__flecha">&#8594;</button>
  </div>
</section>

    
    
    <!-- Comentarios -->
    <section class="contenedorComentarios animated contenido">
        <h2> Testimonios de Clientes o Marcas</h2>

        <div id="testimonios-container">
            <!-- Aquí se insertarán los testimonios dinámicamente -->
        </div>
    </section>
    <%- include('partials/footer') %> 
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const cerrar = document.getElementById("cerrarAlerta");
        const alerta = document.getElementById("alerta");
        const contenido = document.querySelector(".contenido-alerta");
    
        cerrar.addEventListener("click", () => {
          alerta.style.display = "none";
          contenido.style.paddingTop = "0";
        });
      });
    </script>
    
  
    <script src="/js/comentarios.js"></script>
    <script src="/js/animacionHeader.js"></script>
    <script src="/js/carrousel.js"></script>
    <script src="/js/interacciones.js"></script>
    <script src="/js/marcas.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

