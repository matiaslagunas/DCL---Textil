<body>   
   <%- include('partials/header') %>
  
 <section class="servicios">
  <h1>Servicios Especializados</h1>

  <div class="grid">
    <div class="card servicio">
      <div class="contenido-card">
        <div class="icono">👕</div>
        <div class="texto">
          <h2>Producción y Confección</h2>
          <p>Fabricación de prendas y productos textiles a gran escala.</p>
        </div>
      </div>
    </div>

    <div class="card servicio">
      <div class="contenido-card">
        <div class="icono">🎨</div>
        <div class="texto">
          <h2>Estampado y Sublimación</h2>
          <p>Personalización de telas con estampados digitales o serigráficos.</p>
        </div>
      </div>
    </div>

    <div class="card servicio">
      <div class="contenido-card">
        <div class="icono">🧪</div>
        <div class="texto">
          <h2>Teñido y Acabado</h2>
          <p>Proceso de teñido, lavado y terminaciones especiales.</p>
        </div>
      </div>
    </div>

    <div class="card servicio">
      <div class="contenido-card">
        <div class="icono">✅</div>
        <div class="texto">
          <h2>Control de Calidad</h2>
          <p>Inspección rigurosa para garantizar estándares.</p>
        </div>
      </div>
    </div>

    <div class="card servicio">
      <div class="contenido-card">
        <div class="icono">📐</div>
        <div class="texto">
          <h2>Asesoramiento en Materiales</h2>
          <p>Selección de telas según el uso o necesidades del cliente.</p>
        </div>
      </div>
    </div>

    <div class="card servicio">
      <div class="contenido-card">
        <div class="icono">🌱</div>
        <div class="texto">
          <h2>Producción Sustentable</h2>
          <p>Uso de materiales ecológicos con procesos responsables con el medioambiente.</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Sección de productos -->
  <div class="grid productos">
    <div class="card producto">
      <h3>De punto:</h3>
      <ul>
        <li>Remeras</li>
        <li>Remeras Técnicas</li>
        <li>Chombas</li>
        <li>Camisas</li>
        <li>Canguros</li>
        <li>Pantalones Joggers</li>
      </ul>
    </div>

    <div class="card producto">
      <h3>De punto:</h3>
      <ul>
        <li>Short de baño</li>
        <li>Campera rompeviento</li>
        <li>Conjunto deportivo</li>
      </ul>
    </div>

    <div class="card producto">
      <h3>Especiales:</h3>
      <ul>
        <li>Indumentaria para empresas</li>
      </ul>
    </div>
  </div>
</section>


